{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run NusaStat Shiny Dashboard",
      "type": "shell",
      "command": "Rscript",
      "args": ["-e", "shiny::runApp('app.R', port = 3838, host = '0.0.0.0')"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run Dashboard (Development Mode)",
      "type": "shell",
      "command": "Rscript",
      "args": [
        "-e",
        "options(shiny.autoreload = TRUE); shiny::runApp('app.R', port = 3838, host = '127.0.0.1', launch.browser = TRUE)"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Install R Packages",
      "type": "shell",
      "command": "Rscript",
      "args": ["-e", "source('global.R')"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Check R Environment",
      "type": "shell",
      "command": "Rscript",
      "args": [
        "-e",
        "cat('R Version:', R.version.string, '\\n'); cat('Working Directory:', getwd(), '\\n'); cat('Available Packages:\\n'); cat(paste(installed.packages()[,1], collapse=', '))"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
